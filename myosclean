source ${MYOS_PATH}/sdk/config.sh

export SOURCE_CODE_DIRECTORY=$(pwd | awk -F'/' '{print $NF}')

export SOURCE_CODE_PATH=$(pwd)
source ${SOURCE_CODE_PATH}/config.sh

if [ ${BUILD_TYPE} = "Library" ]; then
    if [ ${TARGET} = "NativeApp" ]; then
        export LIBRARY_NAME=NA${SOURCE_CODE_DIRECTORY}
    else
        export LIBRARY_NAME=${SOURCE_CODE_DIRECTORY}
    fi
else
    export APPLICATION_NAME=${SOURCE_CODE_DIRECTORY}
fi

echo "===== Cleaning ${SOURCE_CODE_DIRECTORY} ================================="
make clean

if  [ ${BASE_OS} = "android" ] && [ ! ${BUILD_TYPE} = "Library" ] && [ ${TARGET} = "NativeApp" ] ; then
    ndk-build clean
    ant clean
fi
