source ${MYOS_PATH}/sdk/common
echo "============================== Building $TARGET (release) ================================"
cd ../..
if [ ! -f config.sh ]; then
    cp config.release.sh.in config.release.sh
fi
source config.release.sh
if [ ! -f targets/$TARGET/config.release.sh ]; then
    cp targets/$TARGET/config.release.sh.in targets/$TARGET/config.release.sh
fi
source targets/$TARGET/config.release.sh
mkdir -p targets/$TARGET/obj
make || exit

if  [ ${BASE_OS} = "android" ] && [ ${BUILD_TYPE} = "Application" ]; then
    echo "============================== NDK building $TARGET (release) =============================="
    ndk-build || exit
fi
cd targets/$TARGET
