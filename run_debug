source ${MYOS_PATH}/sdk/build_debug
echo "============================ Running ${TARGET} (debug) ================================="

cd ../..
if [ -f pre-run_debug.sh ]; then
    source pre-run_debug.sh
fi
cd targets/$TARGET

if [ -f pre-run_debug.sh ]; then
    source pre-run_debug.sh
fi

if [ ${BASE_OS} = "android" ]; then
    cd ../..
    adb shell input keyevent 3
    android update project -p . -s --target 1;
    ant debug install
    ant run
else
    cd ${TARGET}.app
    ./${TARGET}
    cd ..
fi

if [ -f post-run_debug.sh ]; then
    source post-run_debug.sh
fi

cd ../..
if [ -f post-run_debug.sh ]; then
    source post-run_debug.sh
fi
cd targets/$TARGET
