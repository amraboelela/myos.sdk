if [ ! -f ${MYOS_PATH}/sdk/config.sh ]; then
    cp ${MYOS_PATH}/sdk/config.sh.ubuntu ${MYOS_PATH}/sdk/config.sh
fi
source ${MYOS_PATH}/sdk/config.sh
export TARGET=$(pwd | awk -F'/' '{print $NF}')
echo "============================== Building $target (develop) ================================"
cd ../..
export SOURCE_CODE_PATH=$(pwd)
if [ ! -f config.sh ]; then
    cp config.develop.sh.in config.develop.sh
fi
source config.develop.sh
if [ ! -f targets/$target/config.develop.sh ]; then
    cp targets/$target/config.develop.sh.in targets/$target/config.develop.sh
fi
source targets/$target/config.develop.sh
mkdir -p targets/$target/obj
make || exit

if  [ ${BASE_OS} = "android" ] && [ ${BUILD_TYPE} = "Application" ]; then
    echo "============================== NDK building ${APPLICATION_NAME} (develop) =============================="
    ndk-build || exit
fi
