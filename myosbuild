if [ ! -f ${MYOS_PATH}/sdk/config.sh ]; then
    cp ${MYOS_PATH}/sdk/config.sh.ubuntu ${MYOS_PATH}/sdk/config.sh
fi

source ${MYOS_PATH}/sdk/config.sh
export SOURCE_CODE_DIRECTORY=$(pwd | awk -F'/' '{print $NF}')
export SOURCE_CODE_PATH=$(pwd)
if [ ! -f ${SOURCE_CODE_PATH}/config.sh ]; then
    cp ${SOURCE_CODE_PATH}/config.sh.in ${SOURCE_CODE_PATH}/config.sh
fi
source ${SOURCE_CODE_PATH}/config.sh

BUILD_TYPE_X=x${BUILD_TYPE}
if [ ${BUILD_TYPE_X} = "x" ]; then
    export BUILD_TYPE=Application
fi
cd targets
for target in * ; do
    echo "============================== Building $target ================================"
    cd $target
    export TARGET=$target
    if [ ! -f config.sh ]; then
        if [ ! -f config.sh.in ]; then
            echo "export CFLAGS=-DDEBUG" > config.sh
        else
            cp config.sh.in config.sh
        fi
    fi
    source ${SOURCE_CODE_PATH}/config.sh
    mkdir -p obj
    cd ../..
    make || exit
    cd targets
done
cd ..
#    exit

