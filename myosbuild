#    make || exit

if [ ${BUILD_TYPE} = "Application" ]; then
    export APPLICATION_NAME=${SOURCE_CODE_DIRECTORY}
    if [ ${BASE_OS} = "android" ]; then
        echo "============================== NDK building ${APPLICATION_NAME} =============================="
        ndk-build || exit
    fi
fi

