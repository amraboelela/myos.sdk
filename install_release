source ${MYOS_PATH}/sdk/buildrelease

cd ../..
if [ -f pre-install_release.sh ]; then
    source pre-install_release.sh
fi
cd targets/$TARGET

if [ -f pre-install_release.sh ]; then
    source pre-install_release.sh
fi

cd ../..
echo "============================== Installing $TARGET (release) ================================"
make copy

cd targets/$TARGET
if [ -f post-install_release.sh ]; then
    source post-install_release.sh
fi

cd ../..
if [ -f post-install_release.sh ]; then
    source post-install_release.sh
fi
cd targets/$TARGET
