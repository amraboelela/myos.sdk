OUTPUT=$(APP_NAME)
CC=clang
CXX=clang
#SYSROOT=$(STANDALONE_PATH)/sysroot
CFLAGS+= -I/usr/local/include -I${MYOS_PATH}/frameworks -I${MYOS_PATH}/libraries -I${MYOS_PATH}/sdk/include
LD=ld

LDFLAGS+=-v -L${MYOS_PATH}/libraries/libs -L${MYOS_PATH}/frameworks/libs
LDLIBS+=-lgcc -lc -lm

STRIP=strip


all: $(OUTPUT)
ODIR=obj
OBJ = $(patsubst %,$(ODIR)/%,$(OBJECTS))

$(ODIR)/%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: ${MYOS_PATH}/sdk/include/%.c
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: %.m
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: %.S
	$(CC) $(CFLAGS) -c $< -o $@
    
$(ODIR)/%.o: %.cpp
	$(CXX) $(CFLAGS) -c $< -o $@

$(OUTPUT): $(OBJ)
	$(LD) --sysroot=$(SYSROOT) $^ $(LDFLAGS) $(LDLIBS) -o $@
	$(STRIP) --strip-unneeded $(OUTPUT)

#-Wl,--gc-sections -Wl,-z,nocopyreloc
#    $(LD) -shared --sysroot $(SYSROOT) $^ $(LDFLAGS) $(LDLIBS) -o $@

clean:
	-rm $(ODIR)/*.o
	-rm $(OUTPUT)

copy:
	adb shell mkdir /data/data/com.myos.myapps/apps/$(OUTPUT).app
	adb push $(OUTPUT) /data/data/com.myos.myapps/apps/$(OUTPUT).app/
	ls *.png *.json | xargs -I {} adb push {} /data/data/com.myos.myapps/apps/$(OUTPUT).app/
