OUTPUT=lib$(LIB_NAME).so
CC=$(STANDALONE_PATH)/bin/clang
CXX=$(STANDALONE_PATH)/bin/clang++
SYSROOT=$(STANDALONE_PATH)/sysroot
CFLAGS+=-march=armv5te --sysroot $(SYSROOT) -I$(SYSROOT)/usr/include -I${MYOS_PATH}/frameworks -I${MYOS_PATH}/libraries -I${MYOS_PATH}/sdk/include -I$(ANDROID_SOURCE_PATH)/frameworks/base/include -I$(ANDROID_SOURCE_PATH)/system/core/include -I$(ANDROID_SOURCE_PATH)/hardware/libhardware/include
LD=$(STANDALONE_PATH)/bin/clang++

LDFLAGS+=-v -L${MYOS_PATH}/libraries/libs -L${MYOS_PATH}/frameworks/libs -no-canonical-prefixes
LDLIBS+=-lgcc -lc -lm

_SLIBS=$(patsubst %,${MYOS_PATH}/libraries/libs/lib%.a,$(SLIBS))

all: $(OUTPUT)
ifeq ($(TARGET),NativeApp)
    ODIR=NAObj
else
    ODIR=obj
endif

OBJ=$(patsubst %,$(ODIR)/%,$(OBJECTS))

$(ODIR)/%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: ${MYOS_PATH}/sdk/include/%.c
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: %.m
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: %.mm
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: %.S
	$(CC) $(CFLAGS) -c $< -o $@
    
$(ODIR)/%.o: %.cpp
	$(CXX) $(CFLAGS) -c $< -o $@

$(_SLIBS):

$(OUTPUT): $(OBJ) $(_SLIBS)
	$(LD) -shared --sysroot $(SYSROOT) $^ $(LDFLAGS) $(LDLIBS) -o $@

clean:
	@echo
	@echo "=== Cleaning $(LIB_NAME) ==="
	-rm obj/*.o
	-rm NAObj/*.o
	-rm $(OUTPUT)

copy:
	cp *.so ${MYOS_PATH}/frameworks/libs/
