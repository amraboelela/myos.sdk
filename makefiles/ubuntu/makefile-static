OUTPUT=lib$(LIB_NAME).a
CC=$(STANDALONE_PATH)/bin/clang
CXX=$(STANDALONE_PATH)/bin/clang++
AR=$(STANDALONE_PATH)/bin/arm-linux-androideabi-ar
SYSROOT=$(STANDALONE_PATH)/sysroot
CFLAGS+= -march=armv5te --sysroot $(SYSROOT) -I$(SYSROOT)/usr/include -I${MYOS_PATH}/frameworks -I${MYOS_PATH}/libraries -I${MYOS_PATH}/sdk/include -I$(ANDROID_SOURCE_PATH)/frameworks/base/include -I$(ANDROID_SOURCE_PATH)/system/core/include -I$(ANDROID_SOURCE_PATH)/hardware/libhardware/include
ARFLAGS=crs

all: $(OUTPUT)
ODIR=obj
OBJ = $(patsubst %,$(ODIR)/%,$(OBJECTS))

$(ODIR)/%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: %.m
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: %.mm
	$(CC) $(CFLAGS) -c $< -o $@
    
$(ODIR)/%.o: %.S
	$(CC) $(CFLAGS) -c $< -o $@
    
$(ODIR)/%.o: %.cpp
	$(CXX) $(CFLAGS) -c $< -o $@

$(OUTPUT): $(OBJ)
	$(AR) $(ARFLAGS) $@ $^

clean:
	@echo
	@echo "=== Cleaning $(LIB_NAME) ==="
	-rm $(ODIR)/*.o
	-rm $(OUTPUT)

copy:
	cp *.a ${MYOS_PATH}/libraries/libs/
    