OUTPUT=targets/$(TARGET)/$(TARGET).app/$(TARGET)
ODIR=targets/$(TARGET)/obj

CC=clang
CXX=clang
LD=clang
CFLAGS+=-MMD -MP -DGNUSTEP -DGNUSTEP_BASE_LIBRARY=1 -DGNU_RUNTIME=1 -DGNUSTEP_BASE_LIBRARY=1 -pthread -fobjc-exceptions -fPIC -Wall -DGSWARN -DGSDIAGNOSE -Wno-import -g -O2 -I/usr/local/include -I/usr/include/cairo -I${MYOS_PATH}/frameworks -I${MYOS_PATH}/frameworks/Foundation

ifeq ($(DEBUG_MODE),YES)
    CFLAGS+=-DDEBUG
endif
ifeq ($(APP_TYPE),NativeApp)
    CFLAGS+=-DNATIVE_APP
else ifeq ($(APP_TYPE),ParentApp)
    CFLAGS+=-DPARENT_APP
endif

ifeq ($(XCTest),YES)
    OBJECTS+=main
endif

LDFLAGS+=-rdynamic -pthread -fexceptions -fgnu-runtime -L/usr/local/lib
LDLIBS+=-lobjc -lm -llcms 

all: $(OUTPUT)
OBJ = $(patsubst %,$(ODIR)/%.o,$(OBJECTS))

$(ODIR)/%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: ${MYOS_PATH}/sdk/include/%.c
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: %.m
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: %.S
	$(CC) $(CFLAGS) -c $< -o $@
    
$(ODIR)/%.o: %.cpp
	$(CXX) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: %.cc
	$(CXX) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: %.swift
	swiftc $(CFLAGS) -c $< -o $@

$(OUTPUT): $(OBJ)
	$(LD) $^ $(LDFLAGS) $(LDLIBS) -o $@
	export OBJECTS
	echo $(OBJECTS)

clean:
	rm -f $(ODIR)/*.o
	rm -f $(ODIR)/*.d
	rm -rf targets/$(TARGET)/$(TARGET).app

ifeq ($(APP_TYPE),ChildApp)
copy:
	mkdir -p ${MYOS_PATH}/myapps/targets/myApps/myApps.app/apps
	cp -rf targets/$(TARGET)/$(TARGET).app ${MYOS_PATH}/myapps/targets/myApps/myApps.app/apps/
else
copy:
	
endif

