ifeq ($(APP_TYPE),NativeApp)
    ODIR=NAObj
else
    ODIR=obj
endif

ifeq ($(APP_TYPE),NativeApp)
    OUTPUT=$(APP_NAME)
else
    OUTPUT=$(ODIR)/$(APP_NAME)
endif
CC=clang
CXX=clang
LD=clang
CFLAGS+=-MMD -MP -DGNUSTEP -DGNUSTEP_BASE_LIBRARY=1 -DGNU_RUNTIME=1 -DGNUSTEP_BASE_LIBRARY=1 -pthread -fPIC -Wall -DGSWARN -DGSDIAGNOSE -Wno-import -g -O2 -I/usr/local/include -I/usr/include/cairo -I${MYOS_PATH}/frameworks -I${MYOS_PATH}/frameworks/Foundation

ifeq ($(DEBUG_MODE),YES)
    CFLAGS+=-DDEBUG
endif
ifeq ($(APP_TYPE),NativeApp)
    CFLAGS+=-DNATIVE_APP
endif

LDFLAGS+=-rdynamic -pthread -fexceptions -fgnu-runtime -L/usr/local/lib 
LDLIBS+=-lobjc -lm -llcms -lX11 -lGL 

all: $(OUTPUT)
OBJ = $(patsubst %,$(ODIR)/%,$(OBJECTS))

$(ODIR)/%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: ${MYOS_PATH}/sdk/include/%.c
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: %.m
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: %.S
	$(CC) $(CFLAGS) -c $< -o $@
    
$(ODIR)/%.o: %.cpp
	$(CXX) $(CFLAGS) -c $< -o $@

$(OUTPUT): $(OBJ)
	$(LD) $^ $(LDFLAGS) $(LDLIBS) -o $@

clean:
	-rm $(ODIR)/*.o
	-rm $(ODIR)/*.d
	-rm $(APP_NAME)
	-rm $(OUTPUT)

ifeq ($(APP_TYPE),ChildApp)
copy:
	mkdir -p ${MYOS_PATH}/myapps/apps/$(APP_NAME).app
	cp $(OUTPUT) ${MYOS_PATH}/myapps/apps/$(APP_NAME).app/
	ls *.png *.json | xargs -I {} cp {} ${MYOS_PATH}/myapps/apps/$(APP_NAME).app/
endif

