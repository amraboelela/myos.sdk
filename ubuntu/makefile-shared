OUTPUT=lib$(TARGET).so
CC=clang
CXX=clang
LD=clang
CFLAGS+=-fPIC -I/usr/local/include -I/usr/include/cairo -I/usr/include/freetype2 -I${MYOS_PATH}/frameworks -I${MYOS_PATH}/frameworks/Foundation

ifeq ($(DEBUG_MODE),YES)
    CFLAGS+=-DDEBUG
endif

ifeq ($(APP_TYPE),NativeApp)
    CFLAGS+=-DNATIVE_APP
endif

LDFLAGS+=-v -shared -Wl -rdynamic -pthread -fexceptions -L/usr/local/lib -L/usr/lib/ 
LDLIBS+=-lgcc -lc -lm -lrt -ldl

#_SLIBS=$(patsubst %,${MYOS_PATH}/libraries/libs/lib%.a,$(SLIBS))

all: $(OUTPUT)
#ifeq ($(APP_TYPE),NativeApp)
#    ODIR=NAObj
#else
#    ODIR=obj
#endif
ODIR=targets/${TARGET}/obj

OBJ=$(patsubst %,$(ODIR)/%,$(OBJECTS))

$(ODIR)/%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: ${MYOS_PATH}/sdk/include/%.c
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: %.m
	$(CC) $(CFLAGS) -c $< -o $@


$(ODIR)/%.o: %.mm
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: %.S
	$(CC) $(CFLAGS) -c $< -o $@
    
$(ODIR)/%.o: %.cpp
	$(CXX) $(CFLAGS) -c $< -o $@

$(OUTPUT): $(OBJ)
	$(LD) -shared $^ $(LDFLAGS) $(LDLIBS) -o $@

clean:
	rm -f ${ODIR}/*.o
	rm -f ${ODIR}/*.d
	rm -f $(OUTPUT)
	sudo rm -f /usr/local/lib/${OUTPUT}

copy:
	sudo cp ${OUTPUT} /usr/local/lib/
