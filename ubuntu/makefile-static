OUTPUT=lib$(LIB_NAME).a
CC=clang
CXX=clang
AR=clang
CFLAGS+=-MMD -MP -Wall -Wcast-align -Wdeclaration-after-statement -fno-strict-aliasing -fPIC -Wall -Wno-import -g -O2 -fgnu-runtime -fgnu-runtime -I/usr/local/include -I/usr/include/cairo -I${MYOS_PATH}/frameworks -I${MYOS_PATH}/libraries
ARFLAGS=-shared


all: $(OUTPUT)
ODIR=obj
OBJ = $(patsubst %,$(ODIR)/%,$(OBJECTS))

$(ODIR)/%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: %.m
	$(CC) $(CFLAGS) -c $< -o $@

$(ODIR)/%.o: %.mm
	$(CC) $(CFLAGS) -c $< -o $@
    
$(ODIR)/%.o: %.S
	$(CC) $(CFLAGS) -c $< -o $@
    
$(ODIR)/%.o: %.cpp
	$(CXX) $(CFLAGS) -c $< -o $@

$(OUTPUT): $(OBJ)
	$(AR) $(ARFLAGS) $@ $^

clean:
	@echo
	@echo "=== Cleaning $(LIB_NAME) ==="
	-rm $(ODIR)/*.o
	-rm $(ODIR)/*.d
	-rm $(OUTPUT)

copy:
	sudo cp *.a /usr/local/lib/

#	cp *.a ${MYOS_PATH}/libraries/libs/
    
